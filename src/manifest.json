{
	"manifest_version": 2,
	"name": "Redirect",
	"version": "0.1",
	"description": "Helps you focus on homework by redirecting you from distracting websites",
	"content_scripts": [{
		"matches": ["*://*/*"],
		"css": ["css/grd.css", "css/style.css", "lib/font-awesome.min.css"],
		"js": ["lib/jquery.min.js", "lib/vue.js", "js/content_script.js"],
		"run_at": "document_start"
	}],
	"version_name": "v0.1 Tiny Bat",
	"browser_action": {
		"default_icon": "asset/icon.png",
		"default_popup": "view/popup.html"
	},
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"permissions": [
		"tabs",
		"storage"
  ],
	"storage": {
	  "name": "Redirect",
	  "properties": {
	    "distractions": {
	      "type": "array",
	      "items": {
	        "type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"enabled": {
							"type": "boolean"
						}
					}
	      }
	    },
			"focus": {
				"type": "string"
			},
			"isWorking": {
				"type": "boolean"
			},
			"breakInfo": {
				"type": "object",
				"properties": {
					"isOnBreak": {
						"type": "boolean"
					},
					"breakStart": {
						"type": "number"
					},
					"breakLength": {
						"type": "number"
					}
				}
			}
	  }
	}
}
